<style>
  .btn-search{
    background-color:#fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }
  .btn-search:hover{
    background-color:#f8757e;
    color: #fff;
  }

  .btn-search i{
    display: inline;
    margin-right: 0.5rem;
  }

  .search-inp{
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 0.9rem;
  }

  .profile-dropdown {
    cursor: pointer;
    padding: 0.5rem 1rem;
    border: 1px solid #fe424d;
    border-radius: 25px;
    color: #fe424d !important;
    font-weight: bold;
    transition: all 0.3s ease;
  }

  .profile-dropdown:hover {
    background-color: #fe424d;
    color: #fff !important;
  }

  .dropdown-menu {
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .dropdown-item:hover {
    background-color: #f8757e;
    color: #fff;
  }

</style>
<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
    aria-controls="navbarNavAltMarkup"
    aria-expanded="false"
    aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-link" href="/listings">Explore</a>
        </div>
        <div class="navbar-nav ms-auto">
            <form class="d-flex" role="search" method="GET" action="/listings" id="searchForm">
      <input 
        id="countryInput"
        class="form-control me-2 search-inp" 
        type="search" 
        placeholder="Search country" 
        name="country" 
        list="countryList"
        aria-label="Search"
      />
      <button class="btn btn-search" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
    </form>
        </div>
        
      
        <datalist id="countryList">
          <% (typeof uniqueCountries !== 'undefined' ? uniqueCountries : []).forEach(country => { %>
            <option value="<%= country %>"></option>
          <% }); %>
        </datalist>
        
    
        <script>
          const countryInput = document.getElementById('countryInput');
          if (countryInput) {
            countryInput.addEventListener('change', function() {
              const form = document.getElementById('searchForm');
              if (form) form.submit();
            });
          }
        </script>
        <div class="navbar-nav ms-auto">
          <a class="nav-link" href="/listings/new" style="color:blue!important; border:1px solid blue ;border-radius:1rem; margin-right: 1.5rem;">Add listing<i class="fa-solid fa-plus"></i></a>
          <% if(!currUser){%>
          <a class="nav-link" style="color: #fe424d!important;" href="/signup"><b>Sign up</b></a>
          <a class="nav-link" style="color: #fe424d !important;" href="/login"><b>Login</b></a>
          <% } %>
          <% if(currUser) { %>
          <div class="nav-item dropdown">
            <a class="nav-link profile-dropdown dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fa-solid fa-user"></i> <%= currUser.username.split(' ')[0] %>
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
              <li><a class="dropdown-item" href="#"><i class="fa-solid fa-user-circle"></i> My Profile</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="/logout"><i class="fa-solid fa-sign-out-alt"></i> Logout</a></li>
            </ul>
          </div>
          <% } %>
        </div>
    </div>
  </div>
</nav>