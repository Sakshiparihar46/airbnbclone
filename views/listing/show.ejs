<%layout("/layouts/boilerplate.ejs")-%>

    <div class="row  mt-3">
        <div class="col-8 offset-2">
            <h3>
                <%=listing.title%>
            </h3><br>
            <div class="card col-5 offset-2 show-card listing-card">
                <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing_image"><br>
            </div>
            <div class="card-body">
                <p class="card-text"><b>
                        Owned by :<i style="color:red">@<%=listing.owner.username%></i><br>
                        <%= listing.description %>br
                            &#8377; <%=Number(listing.price).toLocaleString("en-IN") %><br>
                                <%= listing.location %><br>
                                    <%= listing.country %><br>
                </p>
            </div>
            <br>
            
            <div id="btn">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">edit </a>
                <br><br>
                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                    <button class="btn btn-dark create-btn delete">delete</button>
                </form>
            </div>
            
            <br>
        </div>
        <div class="col-8 offset-2">
            <hr>
            <h4>Leave a Review</h4>
            <form action="/listings/<%=listing._id%>/reviews" method="POST" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for="rating">Rating</label>
                    <input type="range" class="form-range" min="1" max="5" id="rating" name="review[rating]">
                </div>
                <div>
                    <label for="comment">Comments</label>
                    <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"
                        required></textarea>
                    <div class="invalid-feedback">Please add some comments for review!</div>
                </div>
                <div class="mb-3 mt-3">
                    <button class="btn btn-outline-dark">Submit</button>
                </div>
            </form>
            <hr>
            <p><b>All Reviews</b></p>
            <div class="row">
                <% for(review of listing.reviews) {%>
                    <div class="card col-5 ms-3 mb-3">
                        <div class="card-body">
                            <h5 class="card-title">robert downey junior</h5>
                            <p class="card-text"><%=review.comment%></p>
                            <p class="card-text"><%=review.rating%> stars</p>
                        </div>
                        <form method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" >
                            <button class="btn btn-sm btn-dark mb-3">Delete</button>
                        </form>
                    </div>
                    <%}%>
            </div>
        </div>
    </div>