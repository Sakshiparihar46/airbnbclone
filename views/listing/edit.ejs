<%layout("/layouts/boilerplate.ejs")-%>

    <div class="row">
   <div class="col-8 offset-2">
     <h2>create new listing</h2>
    <form method="post" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation">

       <div class="mb-3"><label for="title" class="form-lable">Title</label>
                <input name="listing[title]" class="form-control"  value="<%=listing.title%>" required>
                 <div class="valid-feedback">titlt looks good!</div>
            </div>

            <div class="mb-3"> <label for="discription" class="form-lable" >discription</label>
                <textarea name="listing[description]" class="form-control" required><%=listing. description%></textarea>
            </div>
            <div class="mb-3"><label for="image url" class="form-lable">image url</label>
                <input name="listing[image][url]"class="form-control"  value ="<%=listing.image.url%>">
            </div>
            <div class="row">
            <div class="mb-3 col-md-4"><label for="price" class="form-lable">price</label>
                <input name="listing[price]"class="form-control"value="<%=listing.price%>" type="number" required>
                 <div class="invalid-feedback">please enter a valid price!</div>
            </div>
            <div class="mb-3 col-md-8"><label for="country" class="form-lable">country</label>
                <input name="listing[country]"class="form-control"  value="<%=listing.country%>" required><div class="invalid-feedback">please enter the country name!</div>
            </div></div>
            <div><label for="location" class="form-lable">location</label>
                <input name="listing[location]"class="form-control"  value="<%=listing.location%>" required>
                <div class="invalid-feedback">please enter the valid location!</div>
            </div><br>
            <button class="btn btn-dark create-btn" >confirm</button><br><br>
    </form>
    </div>
    </div>

